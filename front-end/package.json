{
  "name": "nra-calc",
  "version": "0.1.0",
  "private": false,
  "homepage": "https://codeforkc.org/nra_calc",
  "contributors": [
    {
      "name": "Matt Cook",
      "email": "matt@mattcook.xyz",
      "url": "https://mattcook.xyz"
    }
  ],
  "dependencies": {
    "leaflet": "^1.5.1",
    "node-sass": "^4.12.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-leaflet": "^2.4.0",
    "react-scripts": "3.1.1",
    "semantic-ui-react": "^0.88.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.8",
    "react-snapshot": "^1.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "npm run snapshot && npm run set-docs",
    "set-docs": "rm -r ../docs && cp -r build/ ../docs",
    "snapshot": "react-snapshot",
    "test": "react-scripts test",
    "test:nowatch": "CI=true npm test",
    "eject": "react-scripts eject"
  },
  "reactSnapshot": {
    "snapshotDelay": 500
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:nowatch && eslint src/**/*.{js,jsx}"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
